{
  "rotationPolicies": {
    "default": {
      "maxBytes": "64MB",
      "maxAge": "1h"
    },
    "fast": {
      "maxBytes": "10MB",
      "maxAge": "5m"
    },
    "large": {
      "maxBytes": "128MB"
    }
  },
  "stores": [
    {
      "id": "prod",
      "type": "file",
      "route": "env=prod",
      "policy": "default",
      "params": {
        "dir": "./data/chunks/prod"
      }
    },
    {
      "id": "dev",
      "type": "file",
      "route": "env=dev OR env=staging",
      "policy": "fast",
      "params": {
        "dir": "./data/chunks/dev"
      }
    },
    {
      "id": "archive",
      "type": "file",
      "route": "+",
      "policy": "large",
      "params": {
        "dir": "./data/chunks/archive"
      }
    }
  ],
  "receivers": [
    {
      "id": "chatterbox",
      "type": "chatterbox",
      "params": {
        "minInterval": "10ms",
        "maxInterval": "50ms",
        "instance": "test",
        "formats": "plain,json,kv",
        "hostCount": "5",
        "serviceCount": "3"
      }
    },
    {
      "id": "loki",
      "type": "http",
      "params": {
        "addr": ":3100"
      }
    },
    {
      "id": "syslog",
      "type": "syslog",
      "params": {
        "udp_addr": ":514",
        "tcp_addr": ":514"
      }
    }
  ]
}

set dotenv-load

# Lists all available backend commands.
_default:
  @just --list

# Runs the gastrolog backend with the specified configuration.
run:
  go run ./cmd/gastrolog -config config.json

# Runs the gastrolog backend with the specified configuration, and pprof server.
pprof:
  go run ./cmd/gastrolog -config config.json -pprof localhost:6060

# Runs the gastrolog backend with the specified configuration, and REPL.
repl:
  go run ./cmd/gastrolog -config config.json -repl
